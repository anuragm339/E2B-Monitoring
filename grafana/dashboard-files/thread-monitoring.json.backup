{
  "title": "Thread Monitoring - Detailed Analysis",
  "uid": "thread-monitoring",
  "tags": ["threads", "performance", "diagnostics"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Thread Count",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Live Threads",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_daemon_threads",
          "legendFormat": "Daemon Threads",
          "refId": "B"
        },
        {
          "expr": "jvm_threads_peak_threads",
          "legendFormat": "Peak Threads",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "mean"]
        }
      }
    },
    {
      "id": 2,
      "title": "Thread States Distribution",
      "type": "timeseries",
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "jvm_threads_states_threads{state='runnable'}",
          "legendFormat": "Runnable",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_states_threads{state='blocked'}",
          "legendFormat": "Blocked",
          "refId": "B"
        },
        {
          "expr": "jvm_threads_states_threads{state='waiting'}",
          "legendFormat": "Waiting",
          "refId": "C"
        },
        {
          "expr": "jvm_threads_states_threads{state='timed_waiting'}",
          "legendFormat": "Timed Waiting",
          "refId": "D"
        },
        {
          "expr": "jvm_threads_states_threads{state='new'}",
          "legendFormat": "New",
          "refId": "E"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "stacking": {
              "mode": "normal"
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Blocked"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Runnable"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max"]
        }
      }
    },
    {
      "id": 3,
      "title": "Thread States (Pie Chart)",
      "type": "piechart",
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "jvm_threads_states_threads",
          "legendFormat": "{{state}}",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut",
        "displayLabels": ["percent"]
      }
    },
    {
      "id": 4,
      "title": "Blocked Threads",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "broker_threads_blocked",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Waiting Threads",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "broker_threads_waiting",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 20
              },
              {
                "color": "red",
                "value": 40
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Deadlocked Threads",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "broker_threads_deadlocked",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "NO DEADLOCK âœ“",
                  "color": "green"
                }
              }
            },
            {
              "type": "range",
              "options": {
                "from": 1,
                "to": 999,
                "result": {
                  "text": "ðŸš¨ DEADLOCK!",
                  "color": "red"
                }
              }
            }
          ]
        }
      }
    },
    {
      "id": 7,
      "title": "Thread Growth Rate",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(jvm_threads_live_threads[5m]) * 60",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "threads/min",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 2
              }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Blocked Threads Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_threads_blocked",
          "legendFormat": "Blocked Threads",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "fixed",
            "fixedColor": "red"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 9,
      "title": "Waiting Threads Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 10,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_threads_waiting",
          "legendFormat": "Waiting Threads",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "fixed",
            "fixedColor": "orange"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 10,
      "title": "Thread Count Trend (1 hour)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 18,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Live Threads",
          "refId": "A"
        },
        {
          "expr": "avg_over_time(jvm_threads_live_threads[10m])",
          "legendFormat": "10min Average",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "10min Average"
            },
            "properties": [
              {
                "id": "custom.lineStyle",
                "value": {
                  "dash": [10, 10],
                  "fill": "dash"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "min", "mean"]
        }
      }
    },
    {
      "id": 11,
      "title": "Thread Activity Heatmap",
      "type": "heatmap",
      "gridPos": {
        "x": 0,
        "y": 26,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by(state) (jvm_threads_states_threads)",
          "legendFormat": "{{state}}",
          "refId": "A",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "scaleDistribution": {
              "type": "linear"
            }
          }
        }
      },
      "options": {
        "calculate": false,
        "cellGap": 2,
        "color": {
          "exponent": 0.5,
          "fill": "dark-orange",
          "mode": "scheme",
          "scheme": "Spectral",
          "steps": 128
        },
        "exemplars": {
          "color": "rgba(255,0,255,0.7)"
        },
        "filterValues": {
          "le": 1e-9
        },
        "legend": {
          "show": true
        },
        "rowsFrame": {
          "layout": "auto"
        },
        "tooltip": {
          "show": true,
          "yHistogram": false
        },
        "yAxis": {
          "axisPlacement": "left",
          "reverse": false
        }
      }
    },
    {
      "id": 12,
      "title": "Thread Problem Indicators",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 34,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "broker_threads_blocked",
          "refId": "B",
          "format": "table",
          "instant": true
        },
        {
          "expr": "broker_threads_waiting",
          "refId": "C",
          "format": "table",
          "instant": true
        },
        {
          "expr": "broker_threads_deadlocked",
          "refId": "D",
          "format": "table",
          "instant": true
        },
        {
          "expr": "rate(jvm_threads_live_threads[5m]) * 60",
          "refId": "E",
          "format": "table",
          "instant": true
        },
        {
          "expr": "jvm_threads_states_threads{state='runnable'}",
          "refId": "F",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "instance": true,
              "job": true,
              "__name__": true,
              "state": true
            },
            "renameByName": {
              "Value #A": "Total Threads",
              "Value #B": "Blocked",
              "Value #C": "Waiting",
              "Value #D": "Deadlocked",
              "Value #E": "Growth Rate (threads/min)",
              "Value #F": "Runnable"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": []
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Blocked"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "yellow",
                      "value": 5
                    },
                    {
                      "color": "red",
                      "value": 10
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Deadlocked"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "red",
                      "value": 1
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Growth Rate (threads/min)"
            },
            "properties": [
              {
                "id": "unit",
                "value": "short"
              },
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "yellow",
                      "value": 0.5
                    },
                    {
                      "color": "red",
                      "value": 2
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 13,
      "title": "Thread State Percentages",
      "type": "bargauge",
      "gridPos": {
        "x": 0,
        "y": 42,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "(jvm_threads_states_threads{state='runnable'} / jvm_threads_live_threads) * 100",
          "legendFormat": "Runnable %",
          "refId": "A"
        },
        {
          "expr": "(jvm_threads_states_threads{state='blocked'} / jvm_threads_live_threads) * 100",
          "legendFormat": "Blocked %",
          "refId": "B"
        },
        {
          "expr": "(jvm_threads_states_threads{state='waiting'} / jvm_threads_live_threads) * 100",
          "legendFormat": "Waiting %",
          "refId": "C"
        },
        {
          "expr": "(jvm_threads_states_threads{state='timed_waiting'} / jvm_threads_live_threads) * 100",
          "legendFormat": "Timed Waiting %",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Blocked %"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "yellow",
                      "value": 5
                    },
                    {
                      "color": "red",
                      "value": 10
                    }
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "id": 14,
      "title": "Thread Alerts Status",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 42,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_threads_blocked > 10",
          "legendFormat": "High Blocked Threads",
          "refId": "A"
        },
        {
          "expr": "broker_threads_deadlocked > 0",
          "legendFormat": "Deadlock Detected",
          "refId": "B"
        },
        {
          "expr": "rate(jvm_threads_live_threads[5m]) > 0.5",
          "legendFormat": "Thread Growth Alert",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "mappings": [
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "ALERT!",
                  "color": "red"
                }
              }
            },
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": {
                  "text": "OK",
                  "color": "green"
                }
              }
            }
          ],
          "noValue": "OK"
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "center"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-datasource"
        },
        "enable": true,
        "expr": "broker_threads_deadlocked > 0",
        "iconColor": "red",
        "name": "Deadlock Events",
        "tagKeys": "deadlock"
      }
    ]
  }
}
