{
  "title": "Topic Performance",
  "uid": "topic-performance",
  "tags": ["topic", "performance", "throughput"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Active Topics",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "count(count by(topic) (broker_consumer_messages_sent_total))",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null}
            ]
          }
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
      "title": "Total Throughput",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "sum(rate(broker_consumer_messages_sent_total[1m]))",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "orange", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 3,
      "title": "Total Bytes Sent",
      "type": "stat",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "sum(broker_consumer_bytes_sent_bytes_total) / 1024 / 1024",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "orange", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 4,
      "title": "Avg Message Size",
      "type": "stat",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "sum(broker_consumer_bytes_sent_bytes_total) / sum(broker_consumer_messages_sent_total)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 5,
      "title": "Topic Performance Overview",
      "type": "table",
      "gridPos": {"x": 0, "y": 6, "w": 24, "h": 10},
      "targets": [
        {
          "expr": "sum by(topic) (rate(broker_consumer_messages_sent_total[5m]))",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "sum by(topic) (broker_consumer_bytes_sent_bytes_total) / 1024 / 1024",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "sum by(topic) (broker_consumer_bytes_sent_bytes_total) / sum by(topic) (broker_consumer_messages_sent_total)",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "count by(topic) (count by(topic, consumer_id) (broker_consumer_messages_sent_total))",
          "format": "table",
          "instant": true,
          "refId": "D"
        },
        {
          "expr": "avg by(topic) (broker_consumer_delivery_latency_seconds{quantile=\"0.99\"}) * 1000",
          "format": "table",
          "instant": true,
          "refId": "E"
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "instance": true,
              "job": true,
              "quantile": true
            },
            "renameByName": {
              "topic": "Topic",
              "Value #A": "Msg Rate (msg/s)",
              "Value #B": "Total Bytes Sent (MB)",
              "Value #C": "Avg Msg Size (bytes)",
              "Value #D": "Active Consumers",
              "Value #E": "Delivery Latency p99 (ms)"
            },
            "indexByName": {
              "topic": 0,
              "Value #A": 1,
              "Value #B": 2,
              "Value #C": 3,
              "Value #D": 4,
              "Value #E": 5
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Msg Rate (msg/s)"},
            "properties": [
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Total Bytes Sent (MB)"},
            "properties": [
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 100},
                    {"color": "orange", "value": 500},
                    {"color": "red", "value": 1000}
                  ]
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Avg Msg Size (bytes)"},
            "properties": [
              {
                "id": "decimals",
                "value": 0
              },
              {
                "id": "unit",
                "value": "decbytes"
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Delivery Latency p99 (ms)"},
            "properties": [
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "unit",
                "value": "ms"
              },
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 10},
                    {"color": "orange", "value": 50},
                    {"color": "red", "value": 100}
                  ]
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Active Consumers"},
            "properties": [
              {
                "id": "decimals",
                "value": 0
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "red", "value": null},
                    {"color": "green", "value": 1}
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Msg Rate (msg/s)",
            "desc": true
          }
        ]
      }
    },
    {
      "id": 6,
      "title": "Message Rate by Topic",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [{
        "expr": "sum by(topic) (rate(broker_consumer_messages_sent_total[1m]))",
        "legendFormat": "{{topic}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 7,
      "title": "Bytes Throughput by Topic",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
      "targets": [{
        "expr": "sum by(topic) (rate(broker_consumer_bytes_sent_bytes_total[1m]))",
        "legendFormat": "{{topic}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    },
    {
      "id": 8,
      "title": "Delivery Latency (p99) by Topic",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
      "targets": [{
        "expr": "avg by(topic) (broker_consumer_delivery_latency_seconds{quantile=\"0.99\"}) * 1000",
        "legendFormat": "{{topic}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    },
    {
      "id": 9,
      "title": "Total Messages Sent by Topic",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
      "targets": [{
        "expr": "sum by(topic) (broker_consumer_messages_sent_total)",
        "legendFormat": "{{topic}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    }
  ],
  "datasource": {
    "type": "prometheus",
    "uid": "prometheus-datasource"
  }
}
