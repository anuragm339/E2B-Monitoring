{
  "title": "Broker System Metrics - JVM & Resources",
  "uid": "broker-system-metrics",
  "tags": ["broker", "system", "jvm"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 3,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "row",
      "id": 100,
      "title": "CURRENT STATUS - At a Glance",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "Container CPU Usage",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\".*/50b37ebce75b.*\"}[1m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "orange", "value": 70},
              {"color": "red", "value": 85}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
      "title": "Container Memory Usage",
      "type": "gauge",
      "gridPos": {
        "x": 6,
        "y": 1,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{id=~\".*/50b37ebce75b.*\"} / container_spec_memory_limit_bytes{id=~\".*/50b37ebce75b.*\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "orange", "value": 85},
              {"color": "red", "value": 95}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 3,
      "title": "Active Threads",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 1,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "orange", "value": 100},
              {"color": "red", "value": 150}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 9,
      "title": "Disk I/O Rate",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 1,
        "w": 6,
        "h": 5
      },
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{id=~\".*/50b37ebce75b.*\"}[1m]) + rate(container_fs_writes_bytes_total{id=~\".*/50b37ebce75b.*\"}[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1048576},
              {"color": "orange", "value": 10485760},
              {"color": "red", "value": 52428800}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 4,
      "title": "Memory Breakdown (Container vs JVM)",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 24,
        "h": 4
      },
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{id=~\".*/50b37ebce75b.*\"} / 1024 / 1024",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"}) / 1024 / 1024",
          "refId": "B"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"nonheap\"}) / 1024 / 1024",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byFrameRefID", "options": "A"},
            "properties": [
              {"id": "displayName", "value": "Container Total"},
              {"id": "color", "value": {"fixedColor": "blue", "mode": "fixed"}}
            ]
          },
          {
            "matcher": {"id": "byFrameRefID", "options": "B"},
            "properties": [
              {"id": "displayName", "value": "JVM Heap"},
              {"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}
            ]
          },
          {
            "matcher": {"id": "byFrameRefID", "options": "C"},
            "properties": [
              {"id": "displayName", "value": "JVM Non-Heap"},
              {"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}}
            ]
          }
        ]
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "type": "row",
      "id": 101,
      "title": "SYSTEM TRENDS - Resource Usage Over Time",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 1
      },
      "collapsed": false
    },
    {
      "id": 5,
      "title": "Container CPU Trend",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 11,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\".*/50b37ebce75b.*\"}[1m]) * 100",
          "legendFormat": "Container CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Container CPU %"},
            "properties": [
              {
                "id": "color",
                "value": {"fixedColor": "blue", "mode": "fixed"}
              }
            ]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean", "max"]
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 6,
