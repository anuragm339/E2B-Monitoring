        },
        {
          "expr": "rate(jvm_gc_pause_seconds_sum[1m]) * 1000",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 5},
