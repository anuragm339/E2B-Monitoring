{
  "title": "Broker System Metrics - JVM & Resources",
  "uid": "broker-system-metrics",
  "tags": ["broker", "jvm", "memory", "system"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "JVM Heap Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Used Heap - {{id}}",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Max Heap - {{id}}",
          "refId": "B"
        },
        {
          "expr": "jvm_memory_committed_bytes{area=\"heap\"}",
          "legendFormat": "Committed Heap - {{id}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "mean"]
        }
      }
    },
    {
      "id": 2,
      "title": "JVM Non-Heap Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
          "legendFormat": "Used Non-Heap - {{id}}",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"nonheap\"}",
          "legendFormat": "Max Non-Heap - {{id}}",
          "refId": "B"
        },
        {
          "expr": "jvm_memory_committed_bytes{area=\"nonheap\"}",
          "legendFormat": "Committed Non-Heap - {{id}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "mean"]
        }
      }
    },
    {
      "id": 3,
      "title": "Memory Usage Percentage",
      "type": "gauge",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "(jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"}) * 100",
          "legendFormat": "Heap Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "JVM Threads",
      "type": "stat",
      "gridPos": {
        "x": 8,
        "y": 8,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Live Threads",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_daemon_threads",
          "legendFormat": "Daemon Threads",
          "refId": "B"
        },
        {
          "expr": "jvm_threads_peak_threads",
          "legendFormat": "Peak Threads",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 200
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 5,
      "title": "JVM Uptime",
      "type": "stat",
      "gridPos": {
        "x": 16,
        "y": 8,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "process_uptime_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": 0
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 6,
