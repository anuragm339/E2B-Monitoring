{
  "title": "Per-Consumer Metrics - Detailed View",
  "uid": "per-consumer-metrics",
  "tags": [
    "messaging",
    "consumer",
    "detailed"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 2,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "topic",
        "type": "query",
        "label": "Topic",
        "query": {
          "query": "label_values(broker_consumer_offset, topic)",
          "refId": "PrometheusVariableQueryEditor-VariableQuery"
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-datasource"
        },
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "group",
        "type": "query",
        "label": "Consumer Group",
        "query": {
          "query": "label_values(broker_consumer_offset{topic=~\"$topic\"}, group)",
          "refId": "PrometheusVariableQueryEditor-VariableQuery"
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-datasource"
        },
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "id": 0,
      "title": "Active Consumer Groups by Topic",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-datasource"
      },
      "targets": [
        {
          "expr": "broker_consumer_offset",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "indexByName": {
              "topic": 0,
              "group": 1
            },
            "renameByName": {
              "topic": "Topic",
              "group": "Consumer Group"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": {
          "show": true,
          "reducer": ["count"],
          "fields": ""
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Topic"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 300
              }
            ]
          }
        ]
      }
    },
    {
      "id": 1,
      "title": "Successful Messages Sent",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(broker_consumer_messages_sent_total{topic=~\"$topic\",group=~\"$group\"}) - sum(broker_consumer_messages_failed_total{topic=~\"$topic\",group=~\"$group\"} or vector(0))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Successful Data Sent (GB)",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "(sum(broker_consumer_bytes_sent_bytes_total{topic=~\"$topic\",group=~\"$group\"}) - sum(broker_consumer_bytes_failed_bytes_total{topic=~\"$topic\",group=~\"$group\"} or vector(0))) / 1024 / 1024 / 1024",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Current Offset",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "max(broker_consumer_offset{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Consumer Lag",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 6,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "max(broker_consumer_lag{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Consumer Offset Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_consumer_offset{topic=~\"$topic\",group=~\"$group\"}",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "last",
            "mean"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Consumer Lag Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 10,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_consumer_lag{topic=~\"$topic\",group=~\"$group\"}",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "last",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Message Throughput (Msgs/sec)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 18,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(broker_consumer_messages_sent_total{topic=~\"$topic\",group=~\"$group\"}[1m])",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "mean",
            "last",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Data Throughput (Bytes/sec)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 18,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(broker_consumer_bytes_sent_bytes_total{topic=~\"$topic\",group=~\"$group\"}[1m])",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "mean",
            "last",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Delivery Latency (Avg)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 26,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(broker_consumer_delivery_latency_seconds_sum{topic=~\"$topic\",group=~\"$group\"}[1m]) / rate(broker_consumer_delivery_latency_seconds_count{topic=~\"$topic\",group=~\"$group\"}[1m]) * 1000",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "mean",
            "last",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Delivery Latency (Max)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 26,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "broker_consumer_delivery_latency_seconds_max{topic=~\"$topic\",group=~\"$group\"} * 1000",
          "refId": "A",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "mean",
            "last",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Consumer Metrics Table (Grouped by Topic and Group)",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 34,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "sum by (topic, group) (broker_consumer_messages_sent_total{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "sum by (topic, group) (broker_consumer_bytes_sent_bytes_total{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "B",
          "format": "table",
          "instant": true
        },
        {
          "expr": "max by (topic, group) (broker_consumer_offset{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "C",
          "format": "table",
          "instant": true
        },
        {
          "expr": "max by (topic, group) (broker_consumer_lag{topic=~\"$topic\",group=~\"$group\"})",
          "refId": "D",
          "format": "table",
          "instant": true
        },
        {
          "expr": "avg by (topic, group) (rate(broker_consumer_delivery_latency_seconds_sum{topic=~\"$topic\",group=~\"$group\"}[1m]) / rate(broker_consumer_delivery_latency_seconds_count{topic=~\"$topic\",group=~\"$group\"}[1m])) * 1000",
          "refId": "E",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "instance": true,
              "job": true,
              "service": true,
              "__name__": true
            },
            "indexByName": {
              "topic": 0,
              "group": 1,
              "Value #A": 2,
              "Value #B": 3,
              "Value #C": 4,
              "Value #D": 5,
              "Value #E": 6
            },
            "renameByName": {
              "topic": "Topic",
              "group": "Consumer Group",
              "Value #A": "Total Messages Sent",
              "Value #B": "Total Bytes Sent",
              "Value #C": "Max Offset",
              "Value #D": "Max Lag",
              "Value #E": "Avg Latency (ms)"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Total Messages Sent",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Total Bytes Sent"
            },
            "properties": [
              {
                "id": "unit",
                "value": "decbytes"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Max Lag"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "yellow",
                      "value": 10
                    },
                    {
                      "color": "red",
                      "value": 100
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Avg Latency (ms)"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "color": "green",
                      "value": null
                    },
                    {
                      "color": "yellow",
                      "value": 50
                    },
                    {
                      "color": "red",
                      "value": 100
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Topic"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 250
              }
            ]
          }
        ]
      }
    },
    {
      "id": 12,
      "title": "Failed Bytes (MB)",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 48,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(broker_consumer_bytes_failed_bytes_total{topic=~\"$topic\",group=~\"$group\"} or vector(0)) / 1024 / 1024",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "title": "Transfer Success Rate (%)",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 48,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "(sum(broker_consumer_bytes_sent_bytes_total{topic=~\"$topic\",group=~\"$group\"}) - sum(broker_consumer_bytes_failed_bytes_total{topic=~\"$topic\",group=~\"$group\"} or vector(0))) / (sum(broker_consumer_bytes_sent_bytes_total{topic=~\"$topic\",group=~\"$group\"}) + 0.01) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 95
              },
              {
                "color": "yellow",
                "value": 99
              },
              {
                "color": "green",
                "value": 99.9
              }
            ]
          }
        }
      }
    },
    {
      "id": 14,
      "title": "Consumer Health",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 48,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "(time() * 1000 - broker_consumer_last_ack_time_ms{topic=~\"$topic\",group=~\"$group\"}) / 1000",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "mappings": [
            {
              "type": "range",
              "options": {
                "from": 0,
                "to": 60,
                "result": {
                  "text": "Active",
                  "color": "green"
                }
              }
            },
            {
              "type": "range",
              "options": {
                "from": 60,
                "to": 300,
                "result": {
                  "text": "Idle",
                  "color": "blue"
                }
              }
            },
            {
              "type": "range",
              "options": {
                "from": 300,
                "to": 1800,
                "result": {
                  "text": "No Data",
                  "color": "orange"
                }
              }
            },
            {
              "type": "range",
              "options": {
                "from": 1800,
                "to": 999999,
                "result": {
                  "text": "Stuck",
                  "color": "red"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "blue",
                "value": 60
              },
              {
                "color": "orange",
                "value": 300
              },
              {
                "color": "red",
                "value": 1800
              }
            ]
          }
        }
      }
    },
    {
      "id": 15,
      "title": "Consumer Activity Timeline (Time Since Last Delivery/ACK)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 52,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "(time() * 1000 - broker_consumer_last_delivery_time_ms{topic=~\"$topic\",group=~\"$group\"}) / 1000",
          "refId": "A",
          "legendFormat": "{{group}}-{{topic}} (last delivery)"
        },
        {
          "expr": "(time() * 1000 - broker_consumer_last_ack_time_ms{topic=~\"$topic\",group=~\"$group\"}) / 1000",
          "refId": "B",
          "legendFormat": "{{group}}-{{topic}} (last ACK)"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "last",
            "max"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 300
              },
              {
                "color": "red",
                "value": 600
              }
            ]
          }
        }
      }
    }
  ]
}
