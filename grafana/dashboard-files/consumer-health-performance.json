{
  "title": "Consumer Health & Performance",
  "uid": "consumer-health-performance",
  "tags": ["consumer", "health", "performance"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Active Consumers",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "count(count by(consumer_id) (broker_consumer_lag))",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 13}
            ]
          }
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
      "title": "Active Consumer Subscriptions",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "broker_consumer_active",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 10}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 3,
      "title": "Avg Consumer Lag",
      "type": "stat",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "avg(broker_consumer_lag)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "orange", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 4,
      "title": "Avg Delivery Latency (p99)",
      "type": "stat",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
      "targets": [{
        "expr": "avg(broker_consumer_delivery_latency_seconds{quantile=\"0.99\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "orange", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "Consumer Overview",
      "type": "table",
      "gridPos": {"x": 0, "y": 6, "w": 24, "h": 10},
      "targets": [
        {
          "expr": "sum by(consumer_id, group) (rate(broker_consumer_messages_sent_total[5m]))",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "sum by(consumer_id, group) (broker_consumer_lag)",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "avg by(consumer_id, group) (broker_consumer_delivery_latency_seconds{quantile=\"0.99\"})",
          "format": "table",
          "instant": true,
          "refId": "C"
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "instance": true,
              "job": true,
              "quantile": true
            },
            "renameByName": {
              "consumer_id": "Consumer ID",
              "group": "Consumer Group",
              "Value #A": "Msg Rate (msg/s)",
              "Value #B": "Total Lag",
              "Value #C": "Avg Latency p99 (ms)"
            },
            "indexByName": {
              "consumer_id": 0,
              "group": 1,
              "Value #A": 2,
              "Value #B": 3,
              "Value #C": 4
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Total Lag"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 100},
                    {"color": "orange", "value": 500},
                    {"color": "red", "value": 1000}
                  ]
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Avg Latency p99 (ms)"},
            "properties": [
              {
                "id": "unit",
                "value": "ms"
              },
              {
                "id": "decimals",
                "value": 3
              },
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 100},
                    {"color": "orange", "value": 500},
                    {"color": "red", "value": 1000}
                  ]
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Msg Rate (msg/s)"},
            "properties": [
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "auto"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Consumer ID",
            "desc": false
          }
        ]
      }
    },
    {
      "id": 6,
      "title": "Message Rate by Consumer",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [{
        "expr": "sum by(consumer_id) (rate(broker_consumer_messages_sent_total[1m]))",
        "legendFormat": "{{consumer_id}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 7,
      "title": "Consumer Lag Trend",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
      "targets": [{
        "expr": "broker_consumer_lag",
        "legendFormat": "{{consumer_id}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    },
    {
      "id": 8,
      "title": "Delivery Latency (p99) by Consumer",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
      "targets": [{
        "expr": "broker_consumer_delivery_latency_seconds{quantile=\"0.99\"}",
        "legendFormat": "{{consumer_id}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    }
  ],
  "datasource": {
    "type": "prometheus",
    "uid": "prometheus-datasource"
  }
}
