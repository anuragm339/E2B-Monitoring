{
  "title": "Container Metrics",
  "uid": "container-metrics",
  "tags": ["container", "cadvisor", "disk", "network"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Disk Read Bytes/sec",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_blkio_device_usage_total{operation=\"Read\"}[1m])",
          "legendFormat": "{{device}} - Read",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean"]
        }
      }
    },
    {
      "id": 2,
      "title": "Disk Write Bytes/sec",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_blkio_device_usage_total{operation=\"Write\"}[1m])",
          "legendFormat": "{{device}} - Write",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean"]
        }
      }
    },
    {
      "id": 3,
      "title": "Network Receive Bytes/sec",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total[1m])",
          "legendFormat": "{{interface}} - RX",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean"]
        }
      }
    },
    {
      "id": 4,
      "title": "Network Transmit Bytes/sec",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_network_transmit_bytes_total[1m])",
          "legendFormat": "{{interface}} - TX",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean"]
        }
      }
    },
    {
      "id": 5,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=\"/\"}[1m]) * 100",
          "legendFormat": "System CPU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    },
    {
      "id": 6,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{id=\"/\"} / 1024 / 1024",
          "legendFormat": "System Memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "mean", "max"]
        }
      }
    },
    {
      "id": 7,
      "title": "Disk I/O Summary",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 24,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(container_blkio_device_usage_total{operation=\"Read\"}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1000000},
              {"color": "red", "value": 10000000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 8,
      "title": "Network RX Summary",
      "type": "stat",
      "gridPos": {
        "x": 8,
        "y": 24,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1000000},
              {"color": "red", "value": 10000000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 9,
      "title": "Network TX Summary",
      "type": "stat",
      "gridPos": {
        "x": 16,
        "y": 24,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1000000},
              {"color": "red", "value": 10000000}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    }
  ],
  "datasource": {
    "type": "prometheus",
    "uid": "prometheus-datasource"
  }
}
